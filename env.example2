# Dockerfile untuk Node 20+
FROM node:20-slim

WORKDIR /app

# copy package files
COPY package.json package-lock.json* ./

RUN npm ci --omit=dev

# copy app
COPY . .

# buat folder data
RUN mkdir -p /app/data && chown -R node:node /app/data

ENV NODE_ENV=production
EXPOSE 3000

USER node
CMD ["node", "src/index.js"]
